{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Node-RED Dependencies",
      "type": "shell",
      "command": "cd node-red && npm install --silent",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Start Node-RED",
      "type": "shell",
      "command": "cd node-red && npx nodemon --exec node-red",
      "isBackground": true,
      "dependsOn": ["Install Node-RED Dependencies"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(Starting flows|\\[nodemon\\] restarting).*$",
          "endsPattern": "^.*(Started flows|\\[nodemon\\] starting).*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "group": "dev"
      }
    },
    {
      "label": "Stop Node-RED",
      "type": "shell",
      "command": "pkill -f 'nodemon.*node-red' 2>/dev/null; pkill -f 'node-red' 2>/dev/null; PID=$(lsof -ti:1880 2>/dev/null); [ -n \"$PID\" ] && kill $PID 2>/dev/null; sleep 0.5; pkill -9 -f 'nodemon.*node-red' 2>/dev/null; pkill -9 -f 'node-red' 2>/dev/null; true",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Stop Services",
      "type": "shell",
      "command": "make stop",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "make test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "make format",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "make lint",
      "problemMatcher": [
        {
          "owner": "python",
          "fileLocation": ["relative", "${workspaceFolder}/python-backend"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    }
  ]
}
