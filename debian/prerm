#!/bin/bash
set -e

# This script is run before removal/upgrade

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service
        if systemctl is-active --quiet machinevision.service; then
            echo "Stopping machinevision service..."
            systemctl stop machinevision.service
        fi
        ;;

    failed-upgrade)
        :
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
